.loader
    position fixed
    width 100%
    height 100%
    background-color #fff
    left 0
    top 0
    z-index 99999
    display none
    &_submit
        background rgba(0,0,0,.78)
        .loader__text
            color #fff
    &_active
        display block
    &__text
        font-size 14px
        line-height 1em
        position absolute
        left 50%
        width 100px 
        text-align center
        margin-left -50px
        bottom 20px
        color #828282
    &__spinner 
        background url('../img/logo.svg')
        background-repeat no-repeat
        background-size 80px
        width 150px
        height 150px
        background-position center
        background-size 90px
        background-color #fff
        border-radius 100%
        position absolute
        top 50%
        left 50%
        margin-top -70px
        margin-left -60px
        animation sk-scaleout 2.0s infinite ease-in-out
        
@keyframes sk-scaleout
    0%
        transform scale(0)
        
    100%
        transform scale(1.0)
        opacity 0

