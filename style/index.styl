.modal
    position fixed
    left 0
    top 0
    height 100%
    width 100%
    // opacity 0
    visibility hidden
    z-index 500
    transition visibility 0ms 300ms
    &__wrapper
        display flex
        overflow auto
        //white-space nowrap
        position absolute
        left 0
        top 0
        height 100%
        width 100%
        z-index 1000
        transition opacity 300ms 0ms, visibility 0ms 300ms
        opacity 0
        visibility hidden
        background-color rgba(255, 255, 255, 0.85)
        
    &::after
        display inline-block
        vertical-align middle
        width 0
        height 100%
        content ''

    &_visible
        // opacity 1
        visibility visible

    &__dialog
        display inline-table
        vertical-align middle
        z-index 100
        margin auto
        transition transform 300ms 0ms
        transform translateY(-10px)
        width 90%
        max-width 400px
        min-width 300px
        position relative
        background #fff
        height auto
        border-radius 4px
        border 5px solid #35b2fd
        //box-shadow 0px 2px 30px 0px rgba(207, 207, 207, 0.6)
        @media (min-width 450px)
            padding 70px 60px
        padding 70px 40px
        & 
            .input
                margin-bottom 15px
            img
                max-width 100%
            .form__btn
                width 100%
                margin-top 15px
                        
    &__title
        font-size 18px
        line-height 1.7em
        text-align center
        color #010101
        margin-bottom 30px
        margin-top 10px

    &__close
        cursor pointer
        position absolute
        right 15px
        top 15px
        display inline-block
        z-index 1050 
        
    &.modal_visible
        .modal__wrapper
            transition opacity 300ms 0ms, visibility 0ms 0ms
            opacity 1
            visibility visible
        .modal__dialog
            transition transform 300ms 0ms
            transform translateY(0)

